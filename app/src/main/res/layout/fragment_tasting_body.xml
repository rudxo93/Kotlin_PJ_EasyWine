<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.view.fragment.infofragment.tasting.TastingBodyFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_tasting_main_title_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:fontFamily="@font/nanumhand"
                android:text="@string/info_tasting_body_title_1"
                android:textColor="@color/black"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_tasting_main_title_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/info_tasting_body_title_2"
                android:textColor="@color/main_wine_color"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_tasting_main_title_1" />

            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="@color/main_wine_color"
                app:layout_constraintBottom_toBottomOf="@+id/tv_tasting_main_title_2"
                app:layout_constraintEnd_toEndOf="@+id/tv_tasting_main_title_2"
                app:layout_constraintStart_toStartOf="@+id/tv_tasting_main_title_2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/info_tasting_body_content_1"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_tasting_main_title_2" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</layout>