<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/rv_item_info_back"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:background="@drawable/radius_info_rv_item_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/rv_item_iv_info_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@id/rv_item_info_back"
        app:layout_constraintStart_toStartOf="@id/rv_item_info_back"
        app:layout_constraintTop_toTopOf="@id/rv_item_info_back" />

    <TextView
        android:id="@+id/rv_item_tv_info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text=""
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/rv_item_info_back"
        app:layout_constraintEnd_toEndOf="@id/rv_item_info_back"
        app:layout_constraintStart_toStartOf="@+id/rv_item_info_back" />

</androidx.constraintlayout.widget.ConstraintLayout>