<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_item_wo_title"
        style="@style/content_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/content_item_wo_opener_title1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_wine_opener"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/wine_opener_remove"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_wo_title" />

    <LinearLayout
        android:id="@+id/linear_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_wine_opener">

        <TextView
            style="@style/content_item_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/content_item_wo_opener_title2" />

        <TextView
            style="@style/content_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/content_item_wo_opener_content1" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>