<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_item_wg_title"
            style="@style/content_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/content_item_wg_champagne_title1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_wind_glass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/champagne_remove"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_wg_title" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:src="@drawable/champagne_name_remove"
            app:layout_constraintBottom_toBottomOf="@+id/iv_wind_glass"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/linear_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_wind_glass">

            <TextView
                style="@style/content_item_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/content_item_wg_champagne_title2" />

            <TextView
                style="@style/content_item_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/content_item_wg_champagne_content1" />

            <TextView
                style="@style/content_item_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/content_item_wg_champagne_title3" />

            <TextView
                style="@style/content_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/content_item_wg_champagne_title3_1" />

            <TextView
                style="@style/content_item_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/content_item_wg_champagne_content2" />

            <TextView
                style="@style/content_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/content_item_wg_champagne_title3_2" />

            <TextView
                style="@style/content_item_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/content_item_wg_champagne_content3" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/view_division"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linear_content" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>