<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragment_note">

    <fragment
        android:id="@+id/fragment_favorite"
        android:name="com.duran.gyoung_tae_93.pj.easywine.ui.view.fragment.FavoriteFragment"
        android:label="fragment_favorite"
        tools:layout="@layout/fragment_favorite" />
    <fragment
        android:id="@+id/fragment_info"
        android:name="com.duran.gyoung_tae_93.pj.easywine.ui.view.fragment.InfoFragment"
        android:label="fragment_info"
        tools:layout="@layout/fragment_info" >
        <action
            android:id="@+id/action_fragment_info_to_wineGlassFragment"
            app:destination="@id/wineGlassFragment"
            app:popUpTo="@id/fragment_info"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/fragment_search"
        android:name="com.duran.gyoung_tae_93.pj.easywine.ui.view.fragment.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/fragment_note"
        android:name="com.duran.gyoung_tae_93.pj.easywine.ui.view.fragment.NoteFragment"
        android:label="fragment_note"
        tools:layout="@layout/fragment_note" />
    <fragment
        android:id="@+id/wineGlassFragment"
        android:name="com.duran.gyoung_tae_93.pj.easywine.ui.view.fragment.WineGlassFragment"
        android:label="fragment_wine_glass"
        tools:layout="@layout/fragment_wine_glass" />
</navigation>